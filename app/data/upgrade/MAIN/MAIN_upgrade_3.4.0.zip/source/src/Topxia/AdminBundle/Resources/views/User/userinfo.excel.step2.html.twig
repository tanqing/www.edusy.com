{% extends 'TopxiaAdminBundle:User:layout.html.twig' %}

{% block title %}用户导入 - {{ parent() }}{% endblock %}

{% set menu = 'user-lead' %}
{% set script_controller = 'user/lead-excel' %}

{% block main %}
{{ web_macro.flash_messages() }}
<div class="page-header clearfix">
  <h1 class="pull-left">用户导入-Step2</h1>
</div>

    <div class="row">
          <form method="post" enctype="multipart/form-data">      
              {% if errorInfo %}
                  {% for errorInfo in errorInfo%}
                    <div class="col-md-offset-2">{{errorInfo}}</div><br>
                  {% endfor %}
              {% endif %}
               <div class="col-md-offset-2">校验成功！一共包含 <b>{{userCount}}</b>个用户信息</div><br>
                <div class="col-md-offset-2"><button type="submit" class="btn btn-primary">确定导入</button> <a type="button" class="btn btn-primary" href="{{ url('admin_user_excel_lead') }}">返回</a></div>
          </form>
    </div>

{% endblock %}